<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ufufund.ufb.dao.ClazzTypeMapper">
	
	<insert id="add" parameterType="ClazzType">
		insert into clazztype values(
			#{id,jdbcType=VARCHAR},
			#{orgid,jdbcType=VARCHAR},
			#{name,jdbcType=VARCHAR},
			now()
		)
    </insert>
    
    <delete id="remove" parameterType="String">
    	delete from clazztype where id = #{id,jdbcType=VARCHAR}
    </delete>
    
    <select id="getList" parameterType="String" resultType="ClazzType">
    	select * from clazztype where orgid = #{orgid, jdbcType=VARCHAR}
    </select>
</mapper>