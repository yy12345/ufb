<?xml version="1.0" encoding="UTF-8"?>
<layouts defaultdir="/WEB-INF/ftl-layouts/">

	<excludes>
		<!-- host匹配 -->
		<pattern>static.*</pattern>
		<pattern>api.*</pattern>
		<!-- 请求地址path匹配 -->
		<pattern>/**/*.ajax</pattern>
		<pattern>/**/*.service</pattern>
	</excludes>

	<layout page="layout/default_error.vm">
        <pattern>error/404.vm</pattern>
        <pattern>error/500.vm</pattern>
        <pattern>error/*</pattern>
    </layout> 
	
    <layout page="layout/default_register.vm">
        <pattern>register/*.vm</pattern>
    </layout>
    
    <layout page="layout/default_setting.vm">
        <pattern>setting/*.vm</pattern>
    </layout>
    
    <layout page="layout/default_trade.vm">
        <pattern>trade/*.vm</pattern>
    </layout>
    
    <layout page="layout/default_bankcard.vm">
        <pattern>bankcard/*.vm</pattern>
    </layout>
    
    <layout page="layout/public_cust.vm">
        <pattern>cust/*.vm</pattern>
    </layout>
    
    <layout page="layout/public_cust.vm">
        <pattern>org/*.vm</pattern>
    </layout>
    
    <layout page="layout/default.vm" default="true">
        <pattern>**/*.vm</pattern>
    </layout>
</layouts>
