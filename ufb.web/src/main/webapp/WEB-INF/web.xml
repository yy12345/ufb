<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>ufb</display-name>
	<description>ufb web.xml</description>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
        	classpath*:/spring/spring-ufb-biz.xml,classpath*:/spring/spring-ufb-web.xml
        </param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	
	<!-- filter初始化 -->
	<filter>
      <filter-name>servletFilter</filter-name>
      <filter-class>com.ufufund.ufb.web.filter.ServletHolderFilter</filter-class>
    </filter>
    <filter>
      <filter-name>refreshFilter</filter-name>
      <filter-class>com.ufufund.ufb.web.filter.RefreshHolderFilter</filter-class>
    </filter>
	<filter>
      <filter-name>encodingFilter</filter-name>
      <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
      <init-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
      </init-param>
      <init-param>
        <param-name>forceEncoding</param-name>
        <param-value>true</param-value>
      </init-param>
    </filter>
    
    <!-- filter匹配url -->
    <filter-mapping>
      <filter-name>servletFilter</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
      <filter-name>refreshFilter</filter-name>
      <url-pattern>*.htm</url-pattern>
    </filter-mapping>
	<filter-mapping>
      <filter-name>encodingFilter</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
	
	<servlet>
		<servlet-name>ufb</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ufb</servlet-name>
		<url-pattern>*.htm</url-pattern>
		<url-pattern>*.ajax</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CreateImageServlet</servlet-name>
		<servlet-class>com.ufufund.ufb.web.servlet.CreateImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateImageServlet</servlet-name>
		<url-pattern>/createImageservlet</url-pattern>
	</servlet-mapping>
	
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.htm</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/syserr.htm</location>
	</error-page>
</web-app>