   	//手机验证码
	$("#btn-getMsgCode").on("click",function(){
	 
		if($("#mobileno").val() == ''){
			$("#mobileno").next().css('display', 'inline');
			$("#mobileno").closest('li').addClass('error');
			return false;
		}else if($("#verifycode").val() == ''){
