    		data: 'mobileno='+$("#mobileno").val()+'&verifycode='+$("#verifycode").val(),
    		async: false,
    		success: function(b) {
                if (b.errCode == "0000") {
					alert("手机验证码已发送");
					// 倒计时
					var count = 60;
            		var countdown = setTimeout(countDown, 1000);
            		$("#btn-getMsgCode").addClass("off");
            		$("#btn-getMsgCode").attr("disabled","disabled");
            		// TODO
					$("#msgcode").val(b.TODO);
            		$("#msgcode").siblings(".tips-normal").hide();
					//
            		function countDown() {
            			$("#btn-getMsgCode").prop("disabled", true); 
            			$("#btn-getMsgCode").val("等待" + count + "秒!"); 
            			if (count == 0) { 
            				$("#btn-getMsgCode").val("重新发送"); 
            				$("#btn-getMsgCode").removeClass("off");
            				$("#btn-getMsgCode").removeAttr("disabled"); 
            				clearTimeout(countdown); 
            			}else{
            				count--; 
            				setTimeout(countDown, 1000);
            			}
            		}
					//
					$(".ipt-phoneCode").siblings(".tips-check").attr("style","display:none");
					$(".ipt-phoneCode").parent().removeClass("error");
                } else {
                  	var errCode = b.errCode;
					var errMsg = b.errMsg;
					//alert(errCode + ": " + errMsg);
					if("errMsg_mobileno"==errCode){
						$(".ipt-phoneNum").siblings(".tips-check").html("<i class=icon></i>" + errMsg);
						$(".ipt-phoneNum").siblings(".tips-check").attr("style","display:block");
						$(".ipt-phoneNum").parent().addClass("error");
					}else 
					if("errMsg_verifycode"==errCode){
						$(".ipt-code").siblings(".tips-check").html("<i class=icon></i>" + errMsg);
						$(".ipt-code").siblings(".tips-check").attr("style","display:block");
						$(".ipt-code").parent().addClass("error");
					}else{
						alert(errMsg);
					}
					var src = $("#btn-verifycode").attr("src");
					$("#btn-verifycode").attr("src",src +'?time='+(new Date()));
                }
        	}
        });
       
	});

	
	  //提交表单
