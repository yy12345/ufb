<html>
<title>幼富通，托富未来 - 机构认证</title>
<head>
<script type="text/javascript">
	$(function(){
		$('.nav a:eq(0)').addClass('active');
		
	    $(".u2 .v2 .v2_1").click(function(){
	        $(".u2 .v2").hide();
	    });
	    
	   $("#demo").click(function(){
	       $(".bgBox , .layerDemo").fadeIn();       
	   });
	   $(".layerDemo .close , .bgBox").click(function(){
	       $(".bgBox , .layerDemo").fadeOut();       
	   });
	   
	   // 上传机构证件照
	   $(".uploadFile").on('change',function(){
			var filename = $(this).val();
			if(filename == ''){
				$.alert({title:'请选择要上传的图片！'});
				return false;
			} 
			var that = $(this);
			$(this).closest("form").ajaxSubmit({
				url:'${ufbDomain}/corp/auth/upload_infopic.htm',
				type:'POST',
				async:false,
				resetForm:true,
				clearForm:true,
				success: function(data){
					var json = $.parseJSON(data);
					if(json.errCode=='0000'){
						if(that.next().attr("name") == "license_pic"){
							that.next().remove()
						}
						that.after("<img name='license_pic' src='${ufbDomain}/"+json.picUrl+"' width='100%'>");
					} 
				},
				error: function(XMLHttpRequest, textStatus, errorThrown) {
					$.alert({title:'系统出现异常！'});
				}
			});
		})
	   
	   	var count_ref_obj;
	    var count = 6;
	   	var countDown = function(){
	   		if(count > 0){
	   			if (count%2 == 0) { 
	   				count_ref_obj.css("border"," 1px solid #cb3849");
	   			}else{
	   				count_ref_obj.css("border"," 1px solid #DADBDB");
	   			}
	   			count--; 
	   			setTimeout(countDown, 150);
	   		}else{
	   			clearTimeout(countDown);
	   			count = 6;
	   		}
	   	}
	   
	   // 表单提交
	   $("#btn-submit").on("click",function(){
		   var checked = true;
		   $("form").each(function(){
			   if(($(this).find('img[name="license_pic"]').length == 0)&&$(this).parent().attr("style")!="display:none"){
				   checked = false;
				   $(this).find('.uploadFile').focus();
				   count_ref_obj = $(this).find(".y1");
				   setTimeout(countDown, 150);
				   return false;
			   }
		   });
		   
		   if(checked){
			   location="${ufbDomain}/corp/auth/auth_card.htm";
		   }
	   })
	});
</script>
</head>
