<title>幼富通，托富未来 - 账户验证</title>
<script type="text/javascript">
$(function(){
   $('.nav a:eq(0)').addClass('active');
   
   $(".Verification .advBtn .more").click(function(){
       $(".layerpop , .bgBox").fadeIn();
   });
   $(".layerpop .close , .layerpop .btnKnow").click(function(){
       $(".layerpop , .bgBox").fadeOut();
   });
    
   $(".itemB .a2 .b1 .bubble").hover(function(){
       $(this).next().toggle();
   });    
   
   // 金额校验 
   $('#checkAmt').on('click',function(){
	   if(!check_code()){
		   $("#amt_code").val("请输入正确的验证金额");
		   $("#amt_code").attr("style","color:#cb3849");
		   return false;
	   }
	   location.href = '${ufbDomain}/corp/uft/uft_index.htm';
   })
   
   $("form input").on("focus",function(){
	   $("#amt_code").val("");
	   $("#amt_code").attr("placeholder","");
	   $("#amt_code").attr("style","#33");
   })
   
   var check_code = function(){
	   var result = false;
	   $.ajax({
		   type:'get',
		   url:'${ufbDomain}/corp/auth/checkCode.htm',
		   data:'amt_code='+$("#amt_code").val(),
		   async:false,
		   success:function(data){
				var json = $.parseJSON(data);
				if(json.errCode=='0000'){
					result = json.errMsg;
				}
			},
			error: function(XMLHttpRequest, textStatus, errorThrown) {
				console.log('系统出现异常！');
			}
	   })
	   
	   return result;
   }
});
</script>
</head>
