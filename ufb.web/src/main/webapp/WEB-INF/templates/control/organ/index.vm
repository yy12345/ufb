<html>
<title>幼富通，托富未来 - 登录</title>
<head>
<script type="text/javascript">
$(function(){ 
	$('.nav a:eq(0)').addClass('active');
	
   $('#marquee').bxSlider({ 
    displaySlideQty:1,//显示li的个数 
    moveSlideQty: 1,//移动li的个数  
    captions: true,//自动控制 
    auto: true, 
    controls: false//隐藏左右按钮 
   });
    
  $('.bxslider').bxSlider({
      pagerCustom: "#bx-pager",
      controls: false
  });  
  
  $("#submit").on('click', function(){
		 
		 if($("#operator_mobile").val() == ''){
			 $("#error_text").html("请输入登录账号！");
			 $(".wrongTips").fadeIn();
			 return false;
		 }else if($("#passwd").val() == ''){
			 $("#error_text").html("请输入密码！");
			 $(".wrongTips").fadeIn();
			 return false;
		 }if($("#verifycode").val() == ''){
			 $("#error_text").html("请输入图形验证码！");
			 $(".wrongTips").fadeIn();
			 return false;
		 }else if(!verifycode_check($("#verifycode").val())){
		 	 $("#error_text").html("输入的验证码有误！");
			 $(".wrongTips").fadeIn();
			 return false;
		 }
		 
		 if(!login()){
		 	$("#error_text").html("登录账号或密码有误！");
			$("#verifyImg").trigger('click');
			$("#passwd").val('');
			$("#verifycode").val('');
			$("#mobileno").select();
			$(".wrongTips").fadeIn();
			return false;
		 }else{
		 	location.href = '${ufbDomain}/corp/uft/uft_index.htm';
		 	return true;
		 }  
	});
	
	$("#myform input").on('focus', function(){
		$(".wrongTips").fadeOut();
	});

	// 检验图形验证码
	var verifycode_check = function(verifycode){
		var result = false;
		$.ajax({
			type: "POST",
			url: '${ufbDomain}/corp/common/verifycode_check.htm',
			data:'verifycode='+verifycode,
			async:false,
			success: function(data){
				var json = $.parseJSON(data);
				if(json.errCode=='0000'){
					result = true;
				}
			},
			error: function(XMLHttpRequest, textStatus, errorThrown) {
				$.alert({title:'系统出现异常！'});
			}
		});
		return result;
	}
	
	// 登录
	var login = function(){
		 var result = false;
		 $('#myform').ajaxSubmit({
			async:false,
			resetForm:false,
			clearForm:false,
			success: function(data){
				var json = $.parseJSON(data);
				if(json.errCode=='0000'){
					result = true;
				}
			},
			error: function(XMLHttpRequest, textStatus, errorThrown) {
				$.alert({title:'系统出现异常！'});
			}
		 });
		 return result;
	}
});
</script>
</head>
